<%= form_for @post do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br>
  <%= f.label :content %>
  <%= f.text_area :content, size: "40X20" %>
  <br>
  <%= f.collection_select :category_ids, Catergory.all, :id, :name %>
  <br>
  <%= f.fields_for :categories, @post.categories.build do |new_catergory| %>
    <%= new_catergory.label :name, "New Category" %>
    <%= new_catergory.text_field :name %>
  <% end %>
<% end %>
